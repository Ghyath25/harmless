OIL_VERSION = "2.5";
// compile with:
// goil --target=cortex/armv7em/stm32f303 --templates=/Users/briday-m/prog/trampolineGit/goil/templates/ appli_IF.oil

IMPLEMENTATION trampoline {

    /* This fix the default STACKSIZE of tasks */
    TASK {
        UINT32 STACKSIZE = 300 ;
    } ;

    /* This fix the default STACKSIZE of ISRs */
    ISR {
        UINT32 STACKSIZE = 200 ;
    } ;
};

CPU blink {
  OS config {
    STATUS = EXTENDED;
    BUILD = TRUE {
      TRAMPOLINE_BASE_PATH = "/Users/briday-m/prog/trampolineGit/";
      APP_SRC = "appli_IF.c";
      APP_NAME = "appli_IF.elf";
      CFLAGS  = "-O0"; 
      CFLAGS  = "-fdump-tree-cfg";
      LDFLAGS = "-Map=blink.map";
      COMPILER = "arm-none-eabi-gcc";
      ASSEMBLER = "arm-none-eabi-as";
      LINKER = "arm-none-eabi-ld";
      COPIER = "arm-none-eabi-objcopy";
      SYSTEM = PYTHON;
    };
    SYSTEM_CALL = TRUE;
    MEMMAP = TRUE {
      COMPILER = gcc;
      LINKER = gnu_ld { SCRIPT = "script.ld"; };
      ASSEMBLER = gnu_as;
      MEMORY_PROTECTION = FALSE;
    };
  };
  
  APPMODE std {};
  
  TASK T1 {
    PRIORITY = 3;
    AUTOSTART = TRUE { APPMODE = std ;};
    ACTIVATION = 1;
    SCHEDULE = FULL;
    RESOURCE = res1;
    EVENT = event1;
    EVENT = event2;
  };
  
  TASK T2 {
    PRIORITY = 4;
    AUTOSTART = FALSE;
    ACTIVATION = 1;
    SCHEDULE = FULL;
  };
 
  TASK T3 {
    PRIORITY = 2;
    AUTOSTART = FALSE;
    ACTIVATION = 1;
    SCHEDULE = FULL;
    RESOURCE = res1;
  };
  
  TASK T4 {
    PRIORITY = 4;
    AUTOSTART = FALSE;
    ACTIVATION = 1;
    SCHEDULE = NON;
  };

  TASK T5 {
    PRIORITY = 5;
    AUTOSTART = FALSE;
    ACTIVATION = 1;
    SCHEDULE = FULL;
  };

  TASK T6 {
    PRIORITY = 6;
    AUTOSTART = FALSE;
    ACTIVATION = 1;
    SCHEDULE = FULL;
  };

  TASK Tfond {
    PRIORITY = 1;
    AUTOSTART = TRUE { APPMODE = std ;};
    ACTIVATION = 1;
    SCHEDULE = FULL;
  };

  RESOURCE res1 {
	RESOURCEPROPERTY = STANDARD;
  }; 

  EVENT event1 {
	MASK = AUTO;
  };
  
  EVENT event2 {
	MASK = AUTO;
  }; 

};

